# ===========================================
# MC-AWS Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values
# For Cloudflare deployment, set secrets via: wrangler secret put <NAME>

# -------------------------------------------
# AWS Configuration
# -------------------------------------------
AWS_REGION=us-west-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
INSTANCE_ID=

# -------------------------------------------
# Authentication (Required for production)
# -------------------------------------------
# Google OAuth - Create at https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# JWT signing secret - Generate with: openssl rand -base64 32
AUTH_SECRET=

# Admin email (full access to all features)
ADMIN_EMAIL=

# Allowed emails (can start/stop server, comma-separated, optional)
ALLOWED_EMAILS=

# -------------------------------------------
# Application URL
# -------------------------------------------
# Your deployed app URL (used for OAuth callbacks)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# -------------------------------------------
# Cloudflare Configuration (for DNS updates)
# -------------------------------------------
CLOUDFLARE_API_TOKEN=
CLOUDFLARE_ZONE_ID=
CLOUDFLARE_RECORD_ID=
CLOUDFLARE_MC_DOMAIN=

# -------------------------------------------
# Google Drive Backup (optional)
# -------------------------------------------
GDRIVE_REMOTE=
GDRIVE_ROOT=
