{
  "name": "mc-aws-frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:mock": "MC_BACKEND_MODE=mock ENABLE_DEV_LOGIN=true next dev",
    "setup": "./setup.sh",
    "prebuild": "tsx scripts/validate-env.ts",
    "build": "next build",
    "start": "next start",
    "lint": "biome lint --write .",
    "format": "biome format --write .",
    "check": "biome check --write .",
    "typecheck": "tsc --noEmit",
    "server:status": "tsx scripts/server-cli.ts status",
    "server:start": "tsx scripts/server-cli.ts start",
    "server:stop": "tsx scripts/server-cli.ts stop",
    "server:hibernate": "tsx scripts/server-cli.ts hibernate",
    "server:resume": "tsx scripts/server-cli.ts resume",
    "server:backup": "tsx scripts/server-cli.ts backup",
    "server:restore": "tsx scripts/server-cli.ts restore",
    "server:backups": "tsx scripts/server-cli.ts backups",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:mock": "MC_BACKEND_MODE=mock vitest run",
    "test:e2e": "playwright test",
    "test:e2e:mock": "MC_BACKEND_MODE=mock playwright test --workers=1",
    "test:e2e:ui": "playwright test --ui",
    "mock:reset": "tsx scripts/mock-cli.ts reset",
    "mock:scenario": "tsx scripts/mock-cli.ts scenario",
    "validate:dev-login": "MC_BACKEND_MODE=mock ENABLE_DEV_LOGIN=true tsx scripts/validate-dev-login.ts",
    "preview:cf": "opennextjs-cloudflare build && wrangler dev",
    "deploy:cf": "./scripts/deploy-cloudflare.sh",

    "cdk:version": "cd infra && cdk --version",
    "cdk:list": "cd infra && cdk list",
    "cdk:synth": "cd infra && cdk synth",
    "cdk:diff": "cd infra && cdk diff",
    "cdk:deploy": "cd infra && cdk deploy",
    "cdk:destroy": "cd infra && cdk destroy --all",
    "cdk:destroy:force": "cd infra && cdk destroy --all --force",
    "destroy": "cd infra && cdk destroy --all",
    "destroy:force": "cd infra && cdk destroy --all --force"
  },
  "dependencies": {
    "@aws-sdk/client-cloudformation": "^3.965.0",
    "@aws-sdk/client-cost-explorer": "^3.965.0",
    "@aws-sdk/client-ec2": "^3.547.0",
    "@aws-sdk/client-lambda": "^3.980.0",
    "@aws-sdk/client-ssm": "^3.547.0",
    "arctic": "^3.7.0",
    "clsx": "^2.1.1",
    "framer-motion": "^12.24.10",
    "jose": "^6.1.3",
    "next": "^15.1.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@opennextjs/cloudflare": "^1.14.8",
    "@playwright/test": "^1.57.0",
    "@testing-library/react": "^16.3.1",
    "@types/node": "^22",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^5.1.2",
    "aws-cdk": "^2.1033.0",
    "aws-cdk-lib": "^2.232.1",
    "constructs": "^10.4.3",
    "dotenv": "^16.6.1",
    "jsdom": "^27.4.0",
    "postcss": "^8",
    "source-map-support": "^0.5.21",
    "tailwindcss": "^3.4.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5",
    "vitest": "^4.0.16",
    "wrangler": "^4.58.0"
  }
}
