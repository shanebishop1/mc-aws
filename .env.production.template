# Example template - copy to .env.production and fill in your values
# This file is gitignored - your secrets stay private

# Authentication
# Generate with: openssl rand -base64 48
AUTH_SECRET=your-secret-here
NEXT_PUBLIC_APP_URL=https://mc.yourdomain.com

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Email setup
ADMIN_EMAIL=your-email@gmail.com
ALLOWED_EMAILS=friend1@gmail.com,friend2@gmail.com

# AWS Configuration
AWS_REGION=us-west-1
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key

# SES Config
VERIFIED_SENDER=start@yourdomain.com
NOTIFICATION_EMAIL=your-email@gmail.com
START_KEYWORD="yourpassword"

# Cloudflare Configuration
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token
CLOUDFLARE_ZONE_ID=your-zone-id
CLOUDFLARE_RECORD_ID=your-record-id
CLOUDFLARE_MC_DOMAIN=mc.yourdomain.com

# GitHub
GITHUB_USER="yourusername"
GITHUB_REPO="yourrepo"
GITHUB_TOKEN=your-github-token

# EC2 Instance
INSTANCE_ID=i-xxxxxxxxxxxxxxxxx
KEY_PAIR_NAME="your-keypair-name"

# Google Drive token
GDRIVE_REMOTE="gdrive"
GDRIVE_ROOT="mc-backups"

# AWS CDK (optional)
CDK_DEFAULT_ACCOUNT=your-account-id
CDK_DEFAULT_REGION=us-west-1

# Development - disable in production
ENABLE_DEV_LOGIN=false
