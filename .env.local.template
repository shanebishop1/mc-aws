# ===========================================
# MC-AWS Local Development Configuration
# ===========================================
# Copy this file to .env.local for local development
# Next.js automatically loads .env.local in development

# -------------------------------------------
# Development Authentication
# -------------------------------------------
# Enable the /api/auth/dev-login route for local testing
# Visit http://localhost:3000/api/auth/dev-login to get a session cookie
ENABLE_DEV_LOGIN=true

# JWT signing secret (can be any string for local dev)
AUTH_SECRET=dev-secret-change-in-production

# -------------------------------------------
# AWS Configuration
# -------------------------------------------
AWS_REGION=us-west-2
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
INSTANCE_ID=

# -------------------------------------------
# Cloudflare Configuration (for DNS updates)
# -------------------------------------------
CLOUDFLARE_API_TOKEN=
CLOUDFLARE_ZONE_ID=
CLOUDFLARE_RECORD_ID=
CLOUDFLARE_MC_DOMAIN=

# -------------------------------------------
# Google Drive Backup (optional)
# -------------------------------------------
# GDRIVE_REMOTE=gdrive
# GDRIVE_ROOT=mc-backups
